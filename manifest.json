{
  "manifest_version": 3,
  "name": "snap-it-like-its-hot",
  "version": "2.0",
  "description": "Capture element or full-page screenshots via scroll+stitch, copy to clipboard, and download.",
  "permissions": [
    "activeTab",
    "tabs",
    "clipboardWrite",
    "scripting",
    "downloads"
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "snap-it-like-its-hot",
    "default_popup": "popup.html",
    "default_icons": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
