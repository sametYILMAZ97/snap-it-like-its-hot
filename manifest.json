{
  "manifest_version": 3,
  "name": "Smart Screenshot",
  "version": "2.0",
  "description": "Capture element or full-page screenshots via scroll+stitch, copy to clipboard, and download.",
  "permissions": ["activeTab", "tabs", "clipboardWrite", "scripting", "downloads"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Smart Screenshot",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
